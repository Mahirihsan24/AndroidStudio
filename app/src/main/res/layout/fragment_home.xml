<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_restaurant"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to MealOrder App"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quickly manage dishes and orders"
            android:textSize="16sp"
            android:textColor="@color/colorTextSecondary"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Quick Action Buttons -->
        <Button
            android:id="@+id/btnHomeManageDishes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Dishes"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnHomeManageOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Orders"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnHomeCreateOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Order"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnHomeViewOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Orders" />

    </LinearLayout>
</ScrollView>
